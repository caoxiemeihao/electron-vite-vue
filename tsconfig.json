{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@/*": ["src/*"],
    },
    "allowSyntheticDefaultImports": true
  }
}
